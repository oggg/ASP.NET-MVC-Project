@model ApplicationStore.Web.Areas.Developer.ViewModels.DeveloperApplicationsViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="container">
        @if (Model.Applications.Count() == 0)
        {
            <h2>We have no applications at the moment</h2>
        }
        else
        {
            <div>
                @foreach (var item in Model.Applications)
                {
                    <div class="col-md-4 bordered">
                        <h2>@item.Name</h2>
                        <div>
                            <img class="img-responsive img-rounded" src="@Url.Content(item.AppImage)" alt="@item.Name" />
                        </div>
                        <div>
                            <strong>Category: </strong> @item.Category
                        </div>
                        <a href="/Applications/Details/@item.Id" class="btn btn-primary">More Details...</a>
                        @if (!(User.IsInRole(DbConstants.AdminRole) || User.IsInRole(DbConstants.DeveloperRole)))
                        {
                            <a href="/" class="btn btn-info">Download</a>
                        }
                    </div>
                }
            </div>
        }
    </div>
</div>